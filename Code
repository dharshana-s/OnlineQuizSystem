	public static void main(String[] args)
	{
		String name = null;
		System.out.println("Welcome to Online Quiz\t\t");
		System.out.println("RULES:\n*It contains 10 questions and all the questions must be attended\n*Each question gets 10 marks\n*Choosing of wrong options will be declared as zero");
		System.out.println("Are you ready to attend the QUIZ?");
		int ivalue;
		System.out.println("1.Yes\t\t2.No");
		Scanner getValue = new Scanner(System.in);
		ivalue = getValue.nextInt();
		if(ivalue==2)
		{
			System.out.println("Thank you");
		}
		
		else if(ivalue==1)
		{
			System.out.println("Enter your name:");
			getValue = new Scanner(System.in);
			name = getValue.nextLine();
			int s= quiz(name);
			System.out.println("Your final score is: "+s);
			int nqa;
			nqa = s/10;
			System.out.println("No. of correct questions answered:"+nqa+" out of 10");
		}
	}

